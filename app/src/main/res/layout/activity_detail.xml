<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/activity_horizontal_margin"
            tools:context="com.udacity.sandwichclub.DetailActivity"
            >


            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                app:layout_constrainedWidth="true"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/sandwich_picture_content_description"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/aka_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/med_text_size_details"
                android:text="@string/detail_also_known_as_label"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/also_known_tv"
                app:layout_constraintTop_toBottomOf="@+id/image_iv"/>

            <TextView
                android:id="@+id/also_known_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/med_text_size_details"
                style="@style/Base.TextAppearance.AppCompat.Display3"
                app:layout_constraintTop_toBottomOf="@+id/image_iv"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                app:layout_constraintLeft_toRightOf="@+id/aka_label"
                app:layout_constraintRight_toRightOf="parent"/>


            <TextView
                android:id="@+id/origin_label"
                android:textSize="@dimen/med_text_size_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_place_of_origin_label"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/aka_label"
                app:layout_constraintTop_toBottomOf="@+id/also_known_tv"
                />
            <TextView
                android:id="@+id/origin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/med_text_size_details"
                android:paddingStart="@dimen/activity_horizontal_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/also_known_tv"
                app:layout_constraintLeft_toRightOf="@+id/origin_label"/>


            <TextView
                android:id="@+id/ingred_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/med_text_size_details"
                android:text="@string/detail_ingredients_label"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/origin_label"
                app:layout_constraintEnd_toStartOf="@+id/ingredients_tv"
                app:layout_constraintTop_toBottomOf="@+id/origin_tv"/>

            <TextView
                android:id="@+id/ingredients_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/med_text_size_details"
                android:paddingStart="@dimen/activity_horizontal_margin"
                app:layout_constraintRight_toRightOf="@+id/origin_tv"
                app:layout_constraintTop_toBottomOf="@+id/origin_tv"
                app:layout_constraintStart_toEndOf="@+id/ingred_label"/>


            <TextView
                android:id="@+id/desc_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/med_text_size_details"
                android:text="@string/detail_description_label"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/ingred_label"
                app:layout_constraintTop_toBottomOf="@+id/ingredients_tv"
                app:layout_constraintRight_toLeftOf="@+id/description_tv"
                />
            <TextView
                android:id="@+id/description_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size_details"
                android:paddingStart="@dimen/activity_horizontal_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ingredients_tv"
                app:layout_constraintLeft_toRightOf="@+id/desc_label"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>